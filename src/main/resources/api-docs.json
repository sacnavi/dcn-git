	"components": {
		"schemas": {
			"Location": {
				"type": "object",
				"properties": {
					"cityName": {
						"type": "string"
					},
					"zip": {
						"type": "string"
					},
					"comments": {
						"type": "string"
					}
				}
			},
			"Pet": {
				"type": "object",
				"properties": {
					"id": {
						"type": "string"
					},
					"species": {
						"type": "string"
					},
					"breed": {
						"type": "string"
					},
					"name": {
						"type": "string"
					},
					"comments": {
						"type": "string"
					},
					"spayed": {
						"type": "boolean"
					},
					"age": {
						"type": "integer",
						"format": "int32"
					},
					"foundIn": {
						"$ref": "#/components/schemas/Location"
					},
					"sex": {
						"type": "string",
						"enum": [
							"MALE",
							"FEMALE"
						]
					},
					"registerStatus": {
						"type": "string",
						"enum": [
							"ARRIVED",
							"CHECKED",
							"READY",
							"PROCESSING",
							"ADOPTED"
						]
					},
					"vaccines": {
						"type": "array",
						"items": {
							"$ref": "#/components/schemas/Vaccine"
						}
					},
					"photos": {
						"type": "array",
						"items": {
							"type": "string"
						}
					}
				}
			},
			"Vaccine": {
				"type": "object",
				"properties": {
					"type": {
						"type": "string"
					},
					"lot": {
						"type": "string"
					},
					"applicationDate": {
						"type": "string",
						"format": "date"
					}
				}
			},
			"City": {
				"type": "object",
				"properties": {
					"id": {
						"type": "string"
					},
					"code": {
						"type": "string"
					},
					"name": {
						"type": "string"
					},
					"zips": {
						"type": "array",
						"items": {
							"type": "string"
						}
					}
				}
			},
			"NewPetRequest": {
				"type": "object",
				"properties": {
					"species": {
						"type": "string"
					},
					"breed": {
						"type": "string"
					},
					"name": {
						"type": "string"
					},
					"comments": {
						"type": "string"
					},
					"spayed": {
						"type": "boolean"
					},
					"age": {
						"type": "integer",
						"format": "int32"
					},
					"sex": {
						"type": "string",
						"enum": [
							"MALE",
							"FEMALE"
						]
					},
					"foundIn": {
						"$ref": "#/components/schemas/Location"
					}
				}
			}
		}
	}
