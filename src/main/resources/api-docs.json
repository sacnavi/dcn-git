	"paths": {
		"/api/mascotas/{id}": {
			"get": {
				"tags": [
					"mascota"
				],
				"summary": "Consulta mascota por Id",
				"operationId": "getPetById",
				"parameters": [
					{
						"name": "id",
						"in": "path",
						"required": true,
						"schema": {
							"type": "string"
						}
					}
				],
				"responses": {
					"404": {
						"description": "Mascota no encontrada",
						"content": {
							"application/json": {
								"schema": {
									"$ref": "#/components/schemas/Pet"
								}
							}
						}
					},
					"200": {
						"description": "OK",
						"content": {
							"application/json": {
								"schema": {
									"$ref": "#/components/schemas/Pet"
								}
							}
						}
					}
				}
			},
			"put": {
				"tags": [
					"mascota"
				],
				"summary": "Modificar mascota por Id",
				"operationId": "updatePet",
