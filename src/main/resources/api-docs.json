		"/api/mascotas": {
			"get": {
				"tags": [
					"mascota"
				],
				"summary": "Listar todas las mascotas",
				"operationId": "listPets",
				"responses": {
					"200": {
						"description": "OK",
						"content": {
							"application/json": {
								"schema": {
									"type": "array",
									"items": {
										"$ref": "#/components/schemas/Pet"
									}
								}
							}
						}
					}
				}
			},
			"post": {
				"tags": [
					"mascota"
				],
				"summary": "Crear mascota",
				"operationId": "addPet",
				"requestBody": {
					"content": {
						"application/json": {
							"schema": {
								"$ref": "#/components/schemas/NewPetRequest"
							}
						}
					},
					"required": true
				},
				"responses": {
					"201": {
						"description": "Created",
						"content": {
							"application/json": {
								"schema": {
									"$ref": "#/components/schemas/Pet"
								}
							}
						}
					}
				}
			}
		},
		"/api/ciudades": {
